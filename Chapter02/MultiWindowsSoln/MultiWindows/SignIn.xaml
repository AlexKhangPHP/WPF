<Window x:Class="MultiWindows.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiWindows"
        mc:Ignorable="d"
        Title="SignIn" Height="209.8" Width="375.8" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="User name" HorizontalAlignment="Left" Margin="37,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.447,0.115"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="37,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,1.231"/>
        <Label x:Name="label2" Content="Please enter your user name and password." HorizontalAlignment="Left" Margin="37,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.342,0.462"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="119,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="212"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="23" Margin="119,79,0,0" VerticalAlignment="Top" Width="212"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="256,121,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>

    </Grid>
</Window>
